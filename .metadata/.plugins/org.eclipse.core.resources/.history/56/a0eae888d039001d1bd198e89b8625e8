package entities;

public class Product {
	public String name;
	public double preco;
	public int quantidade;
	
	public Product(String name, double preco, int quantity) {//CONSTRUTOR
		this.name = name; //atributo do objeto
		this.preco = preco;
		this.quantidade= quantitdade;
	}
	
	public double totalValorEstoque() {
		return preco * quantidade;
	}
	
	public void addProduto(int quantidade) {
		this.quantidade += quantidade; //this referencia o atributo quantidade e não o parâmetro quantidade
	}
	
	public void removeProduto(int quantidade) {
		this.quantidade -= quantidade;
	}

	public String toString() {
		
		return name + ", $"
				+ String.format("%.2f", preco)
				+ ", "
				+ quantidade
				+ " unidades, Total: $ "
				+ String.format("%.2f", totalValorEstoque());
	}
}
